<div class="container">
  <div class="row">
      <% @decks.each do |deck| %>
    <div class="col-md-4">
      <div class="deck-container">
        <div class="panel-heading">
          <h3 class="panel-title">
            <% if deck.current? %>
                <i class="fa fa-check-square-o fa-2x" aria-hidden="true"></i>
            <% end %>
            <%= link_to deck.name, deck_path(deck) %>
          </h3>
        </div>
        <div class="panel-body">
          <%= link_to t('common.edit'), edit_deck_path(deck) %> |
          <%= link_to t('common.delete'), deck, method: :delete, data: { confirm: t('common.confirm') } %>
        </div>
      </div><!-- deck-container-->
    </div>
  <% end %>
  </div>
</div>

<div class="container">
  <div class="panel panel-default">
    <div class="panel-body">
      <%= t('.decks_count')%> <%= @count %>
      <%= link_to t('.add_deck'), new_deck_path %>
    </div>
  </div>
</div>
