<%= simple_form_for user, html: { class: 'form-group'} do |f| %>
    <%= f.input :email, as: :email, label: t('.email'), input_html: { class: 'form-control' } %>
    <%= f.input :password, as: :password, label: t('.password'), input_html: { class: 'form-control' } %>
    <%= f.input :password_confirmation, as: :password, label: t('.password_confirm'), input_html: { class: 'form-control' } %>
    <%= f.input :locale, label: t('.lang'), as: :select,
                collection: I18n.available_locales,
                selected: I18n.default_locale %>
    <%= f.button :submit, user.new_record? ? t('common.create') : t('common.edit') %>
<% end %>
