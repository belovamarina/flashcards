<div class="container">
  <% @cards.each do |card| %>
    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="row">
          <div class="col-md-6">
            <%= image_tag(card.image.url(:thumb), class: 'img-thumbnail') if card.image? %>
          </div>
          <div class="col-md-6">
            <h3 class="panel-title"><%= link_to card.original_text, deck_card_path(card) %></h3>
            <small><%= card.review_date.strftime('%d/%m/%Y') %></small>
          </div>
        </div>
      </div>
      <div class="panel-body">
        <%= card.translated_text %>
      </div>
    </div>
  <% end %>
</div>
<div class="container">
  <div class="panel panel-default">
    <div class="panel-body">
      <%= t('.total_count') %>: <%= @count %>
    </div>
  </div>
</div>
