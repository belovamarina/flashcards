<%= simple_form_for card, url: url, html: { class: 'form-group'} do |f| %>
    <%= f.hidden_field :deck_id, value: @deck.id %>
    <%= f.input :original_text, label: t('.original'), input_html: { class: 'form-control' } %>
    <%= f.input :translated_text, label: t('.translate'), input_html: { class: 'form-control' } %>
    <%= f.input :review_date, as: :date, label: t('.review'), selected: Date.today %>
    <%= f.input :image, as: :file, label: t('.upload_image'), input_html: { class: 'form-control' } %>
    <%= f.input :remote_image_url, label: t('.link_image'), input_html: { class: 'form-control' } %>
    <%= f.button :submit, t('.button') %>
<% end %>
