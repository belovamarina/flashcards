<%= simple_form_for card, html: { class: 'form-group'} do |f| %>
    <%= f.input :original_text, label: 'Оригинальный текст', input_html: { class: 'form-control' } %>
    <%= f.input :translated_text, label: 'Перевод', input_html: { class: 'form-control' } %>
    <%= f.input :review_date, as: :date, label: 'Дата пересмотра', selected: Date.today + 3.days %>
    <%= f.input :image, as: :file, label: 'Загрузите картинку', input_html: { class: 'form-control' } %>
    <%= f.input :remote_image_url, label: 'Или укажите ссылку', input_html: { class: 'form-control' } %>
    <%= f.button :submit, card.new_record? ? 'Создать' : 'Изменить' %>
<% end %>
